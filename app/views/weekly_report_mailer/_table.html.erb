<% stats = total_stats(%w[calories sugar protein fat carbohydrates], object) %>

<%= content_tag(:table, class: 'table table-striped')  do%>
  <%= content_tag(:thead) do %>
    <%= content_tag(:tr) do %>
      <% ['nutrients', 'in total'].each do |el| %>
        <%= content_tag(:th, scope: "col") do %>
          <%= el.capitalize %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

  <%= content_tag(:tbody) do %>
    <% %w[calories sugar protein fat carbohydrates].each do |el| %>
      <%= content_tag(:tr) do %>
        <%= content_tag(:th, scope: "row") do %>
          <%= el.capitalize %>
          <%= content_tag(:td) do %>
            <%= stats[el] %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>