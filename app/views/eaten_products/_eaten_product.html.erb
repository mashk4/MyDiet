<article class="card mb-3">
    <div class="card-body">
      <h3><%= 'Eaten meals' %></h3>

      <section class="card-text">
        <time datetime="<%= eaten_product.format_date %>">
          <small>for date: <%= eaten_product.format_date %></small>
        </time>
      </section>

      <div class="mt-3 mb-3">
        <%= render eaten_product.meals %>
      </div>

      <div class="btn-group">
        <%= link_to 'Show', eaten_product_path(eaten_product), class: 'btn btn-primary mt-2 me-2'%>
        <%= link_to 'Edit', edit_eaten_product_path(eaten_product), class: 'btn btn-primary mt-2 me-2'%>
        <%= button_to 'Delete', eaten_product_path(eaten_product), method: :delete,
        form: { data: { turbo_confirm: 'Are you sure you want to delete this list? All data will be lost.' } },
        class: 'btn btn-danger mt-2 me-2' %>
      </div>
    </div>
</article>